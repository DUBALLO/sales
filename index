    <script>
        // 간단한 요약 데이터 표시 (나중에 실제 데이터로 교체)
        document.addEventListener('DOMContentLoaded', function() {
            // 임시 데이터
            document.getElementById('totalSales').textContent = '3.2억원';
            document.getElementById('totalCustomers').textContent = '47개';
            document.getElementById('totalContracts').textContent = '156건';

            // 파일 업로드 처리
            const fileInput = document.getElementById('file-upload');
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    alert(`파일 "${file.name}"이 선택되었습니다. 곧 파일 처리 기능이 추가될 예정입니다.`);
                }
            });
        });
